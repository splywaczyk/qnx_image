# QNX Build Configuration

# Use the QNX x86_64 platform by default
build --platforms=//bazel/platforms:qnx_x86_64

# Enable toolchain resolution
build --incompatible_enable_cc_toolchain_resolution

# Allow QNX license directory access in sandbox
build --sandbox_add_mount_pair=/home/qnx/.qnx
build --sandbox_writable_path=/home/qnx/.qnx/license
